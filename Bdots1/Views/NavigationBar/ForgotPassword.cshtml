@model Bdots1.CertUser
@{
    Layout = null;
    ViewBag.Title = "ForgotPassword";
}
<script type="text/javascript">
    var profileUpdated = "@ViewBag.Message";
    if (!(profileUpdated===""))
        alert(profileUpdated);
</script>
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Forgot password</title>
    <style>

        #login-div {
            position: absolute;
            left: 40%;
            top: 40%;
            border: 2px solid rgb(0,0,0);
            border-radius: 5px;
            background-color: #e7e7e7;
        }

        .field-validation-error {
            color: red;
        }

        .button {
            background-color: #4CAF50; /* Green */
            border: none;
            color: white;
            text-align: center;
            display: inline-block;
            font-size: 16px;
            margin: 4px 2px;
            -webkit-transition-duration: 0.4s; /* Safari */
            transition-duration: 0.4s;
            cursor: pointer;
        }

        .Forgot {
            padding: 6px 58px;
            background-color: white;
            color: black;
            border: 2px solid #555555;
        }
        .Forgot:hover {
            background-color: #555555;
            color: white;

        }

        label {
            padding-left: 5px;
            font-weight: bold;
            display: block;
            width: 150px;
            float: left;
        }

        .titleForgot {
            text-decoration: underline;
            font-weight: bold;
            font-size: 20px;
        }

        .text-box {
            width:200px;
            padding-top: 6px;
            border: 2px solid rgb(0,0,0);
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <div id="login-div">
        @using (Html.BeginForm("ForgotPassword", "NavigationBar", FormMethod.Post))
    {
        <table>
            <tr>
                <td></td>
                <td class="titleForgot">~ Enter your e-mail ~</td>
            </tr>
            <tr>
                <td>
                    @Html.LabelFor(model => model.email, "Email")
                </td>
                <td>
                    @Html.EditorFor(model => model.email, "email")
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <label class="field-validation-error">@Html.DisplayFor(model => model.LoginErrorMessage)</label>
                </td>
            </tr>
            <tr>
                <td></td>
                <td>
                    <input type="submit" value="Send e-mail" class="button Forgot" />
                </td>
            </tr>
        </table>
}
        <h3>&larr; @Html.ActionLink("Back to login", "Index", "Login")</h3>
    </div>
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

